{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "downlevelIteration": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", "**/*.jsx", "src/pages/produto/[slug].tsx", "src/pages/order/[id].jsx", "src/pages/search.jsx" 
    // "src/utils/db.js", "src/pages/api/products/index.js"  ],
  ],
  "exclude": [
    "node_modules"
  ]
}
